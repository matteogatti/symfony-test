{% extends 'AppBundle::template.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/plugins/magicsuggest/magicsuggest-min.css') }}">

{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Profilo ricetta<small>{{ ricetta.nome }}</small></h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Ricetta</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="callout callout-info lead {{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="box box-primary">
            <div class="box-body">

                <div class="col col-md-6">
                    <form action="{{ path('app_bundle.ricetta.edit', { 'slug': ricetta.slug }) }}" method="POST">
                        {{ form_widget(form) }}
                        <div>
                            <input class="btn btn-primary" type="submit" value="Aggiorna" />
                        </div>
                    </form>
                </div>

            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/plugins/magicsuggest/magicsuggest-min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/ingrediente.js') }}"></script>
{% endblock %}